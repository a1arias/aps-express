extends layout

block content
	p= locals.message
	p= locals.error
	form(action='/login', method='POST')
		div
			label(for='name') user name
			input(type='text', name='username', id='name')
		div
			label(for='password') password
			input(type='password', name='password', id='password')
		div
			input(type='submit')
